        <li class="last leaf"><a href="{{ path('fos_user_security_logout') }}">log out</a>
        </li>
    </ul>
{% endblock %}



{% block content %}
    {% if (user == 'adminuser') or (user == quote.author) %}
        <div class="tabs">

            <h2 class="element-invisible"></h2>
            <ul class="tabs primary">
                <li >
                    <a  href="{{ path('BashBashBundle_post', { 'id': quote.id }) }}">

                        View


                    </a>
                </li>
                <li class="active">
                    <a class="active" href="{{ path('BashBashBundle_edit', { 'id': quote.id }) }}">

                        Edit
                          <span class="element-invisible">

                    (active tab)

                </span>

                    </a>
                </li>
                <li>
                    <a  href="{{ path('BashBashBundle_dell', { 'id': quote.id }) }}">

                        Delete

                    </a>
                </li>
                <li>
                    <a href="/bash/node/179/rating">

                        Voting results

                    </a>
                </li>
            </ul>

        </div>


        <form action="{{ path('BashBashBundle_edit', { 'id' : id } ) }}"
              method="post"
                {{ form_enctype(form) }} >
            {{ form_widget(form) }}
            <p>
            <div id="edit-actions" class="form-actions form-wrapper">

                <input id="edit-submit" class="form-submit" type="submit" value="Save" name="op">


            </div>
            </p>
        </form>






    {% else %}
        You have no rights to edit this post!
    {% endif %}
{% endblock %}